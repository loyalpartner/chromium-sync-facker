{
  "configurations": {
    "run": {
      "adapter": "vscode-go",
      "configuration": {
        "request": "launch",
        "program": "${workspaceFolder}/cmd/main.go",
        "mode": "debug",
        "dlvToolPath": "$HOME/go/bin/dlv"
      }
    },
    "test": {
      "adapter": "vscode-go",
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}",
        "mode": "test",
        "dlvToolPath": "$HOME/go/bin/dlv"
      },
      "args": [
        "-test.run"
      ]
    }
  }
}
